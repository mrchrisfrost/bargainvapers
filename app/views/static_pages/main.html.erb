          <option value="">Batteries</option>
          <option value="1">Mod Batteries</option>
          <option value="2">E-Go Batteries</option>
          <option value="3">Other Batteries</option>
      
          </select>
        
        </div>

        <div class="dropdown">

          <select name="five" class="dropdown-link">
          <option value="">E-Cigarette Starter Kits</option>
          <option value="1">Option #1</option>
          <option value="2">Option #2</option>
          <option a href="#">E-Go kits</a></option>
          </select>

        </div>

        <div class="dropdown">

          <select name="six" class="dropdown-link">
          <option value="">Accessories</option>
          <option value="1">Tanks</option>
          <option value="2">Coils</option>
          <option value="3">Chargers</option>
          </select>
        </div>

      </section>
      </section>



    </div>


    <div class="large-2 columns">
      

    </div>
             
            


    <div class="large-7 columns">
      
      <ul data-orbit>
        
        <li><img src="/assets/svd.jpg" /></li>
        <li><img src="/assets/smoketechzmax.jpg" /></li>
        <li><img src="/assets/vamo.jpg" /></li>
        <li><img src="/assets/itastemvp.png" /></li>
        <li><img src="/assets/itastemini.jpeg" /></li>


      </ul>


    </div>

  </div>

  <div class="row">
    
    <div class="medium-4 columns">
      
        
    </div>
    

    </div>

    <div class="small-2 columns">



      


    </div>



  </div>

  <div class="row">
        <div class="large-12 columns">
         
        </div>
    </div>


    
